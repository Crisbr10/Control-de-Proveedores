{% extends 'base.html.twig' %}

{% block title %}
    Hello ConnectDBController!
{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th class="hide-on-small">Proveedor ID</th>
                <th>Nombre</th>
                <th>Correo electrónico</th>
                <th>Teléfono</th>
                <th>Tipo ID</th>
                <th>Activo</th>
                <th>Fecha de creación</th>
            </tr>
        </thead>
        <tbody>
            {% for proveedor in proveedores %}
                <tr>
                    <td>{{ proveedor.proveedor_id }}</td>
                    <td>{{ proveedor.nombre }}</td>
                    <td>{{ proveedor.correo_electronico }}</td>
                    <td>{{ proveedor.telefono_contacto }}</td>
                    <td>{{ proveedor.tipo_id }}</td>
                    <td>{{ proveedor.activo ? '✅' : '❌' }}</td>
                    <td>{{ proveedor.fecha_creacion}}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
